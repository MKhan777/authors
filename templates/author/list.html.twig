{% extends 'base.html.twig' %}

{% block body %}
    <h1>List of Authors</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Birthday</th>
                <th>Gender</th>
                <th>Place of Birth</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td>{{ author.id }}</td>
                    <td>{{ author.first_name }}</td>
                    <td>{{ author.last_name }}</td>
                    <td>{{ author.birthday|date('Y-m-d') }}</td>
                    <td>{{ author.gender }}</td>
                    <td>{{ author.place_of_birth }}</td>
                    <td>
                        <a href="{{ path('view_author', {'id': author.id}) }}">View</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="pagination">
        <span>Page {{ pagination.current_page }} of {{ pagination.total_pages }}</span>
        {% if pagination.current_page > 1 %}
            <a href="{{ path('list_authors', {'page': pagination.current_page - 1}) }}">Previous</a>
        {% endif %}
        {% if pagination.current_page < pagination.total_pages %}
            <a href="{{ path('list_authors', {'page': pagination.current_page + 1}) }}">Next</a>
        {% endif %}
    </div>
{% endblock %}
